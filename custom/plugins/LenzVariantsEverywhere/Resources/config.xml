<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.2/engine/Shopware/Components/Plugin/schema/config.xsd">

	<elements>
		<element scope="shop" required="false" type="boolean">
			<name>show</name>
			<label lang="de">Aktiv:</label>
			<label lang="en">Active:</label>
			<value>true</value>
		</element>

		<element scope="shop" required="false" type="boolean">
			<name>showOnlySpecifiedVariants</name>
			<label lang="de">Nur ausgewählte Varianten zeigen:</label>
			<label lang="en">Show only specified variants:</label>
			<value>true</value>
		</element>

		<element scope="shop" required="false" type="text">
			<name>groupByGroup</name>
			<label lang="de">Gruppieren nach:</label>
			<label lang="en">Group by:</label>
			<description lang="de">Komma-separierte Liste mit Varianten-Gruppen, z.B.: Farbe,Größe</description>
		</element>

		<element scope="shop" required="false" type="boolean">
			<name>hideOutOfStockVariants</name>
			<label lang="de">Varianten mit Lagerbestand &lt; 1 ausblenden:</label>
			<label lang="en">Hide out of stock variants:</label>
			<value>false</value>
		</element>

		<element scope="shop" required="false" type="boolean">
			<name>appendVariantNameToArticleName</name>
			<label lang="de">Name der Variante im Frontend ausgeben:</label>
			<label lang="en">Append variant name to articlename:</label>
			<value>true</value>
		</element>

		<element scope="shop" required="false" type="boolean">
			<name>showVariantPrice</name>
			<label lang="de">Variantenpreis statt "ab .." zeigen:</label>
			<label lang="en">Show price of variant instead of "from ..":</label>
			<value>true</value>
		</element>

		<element scope="shop" required="false" type="boolean">
			<name>showVariantsInSearch</name>
			<label lang="de">Varianten in Suche anzeigen</label>
			<label lang="en">Show variants in search</label>
			<value>true</value>
		</element>
	</elements>
</config>
